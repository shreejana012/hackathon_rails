<h3>Paintings</h3>
<div class="row">
  <% @item.each do |i| %>
  <div class = "post-box">
    <div class = "col-md-4">
      <div class = "post-heading">
        <h5><b>Title:</b></h5>
          <%= i.title %>
      </div>
      <div class = "post-body">
        <%= image_tag i.photo, class: "image" %>
      </div>
      <div class = "post-footer">
        <%= link_to 'Read More', item_path(i), class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
