<div class="col-md-4"></div>
<div class="col-md-4">
	<div class="panel panel-default">
		<%= simple_form_for @item do |f| %>
		  <%= f.input :title %>
		  <%= f.input :description %>
		  <%= f.input :painter %>
		  <%= f.input :user_id, as: :hidden %>
		  <%= f.input :initial_price %>
		  <%= f.input :shipping_charges %>
		  <%= f.input :photo %>
		  <div class="text-center">
		  	<%= f.button :submit, class: 'btn btn-default'%><br>
		  </div>
		<% end %>
	</div>
</div>
<div class="col-md-4"></div>